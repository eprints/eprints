<?xml version="1.0" encoding="utf-8"?>

<workflow xmlns="http://eprints.org/ep3/workflow" xmlns:epc="http://eprints.org/ep3/control">

  <flow>
    <stage ref="default"/>
  </flow>
   
  <stage name="default">
    <component type="XHTML" surround="None"><div class="ep_block"><p><epc:print expr="$search_description" /></p></div></component>

    <component><field ref="name"/></component>

    <component type="Field::Multi">
      <title><epc:phrase ref="saved_search_mail" /></title>
      <field ref="frequency"/>
      <field ref="mailempty"/>
    </component>

    <component><field ref="public"/></component>

  </stage>
</workflow>
