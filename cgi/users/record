use EPrints;

use strict;

my $session = new EPrints::Session;
exit( 0 ) unless( defined $session );

# Any user can view this page, but most BE a user.
if( !$session->auth_check )
{
	$session->terminate();
	exit( 0 );
}
my $userform = new EPrints::UserForm( 
	$session, 
	$session->get_repository->get_conf( "userhome" ),
	0,
	undef,
	"record" );

$userform->process();

$session->terminate();
