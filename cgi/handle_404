#cjg Not fully finnished. Should detect missing items.

use EPrints;

use strict;

my $handle = new EPrints::Handle();
exit( 0 ) unless( defined $handle );

my $url = $ENV{REDIRECT_URL};

my $r = $handle->{ request };
my $c = $r->connection;
# Has 404 message been suppressed? (don't forget to reset it for this connection)
my $show = $c->notes->get( "show_404" );
$c->notes->set( show_404 => 1 );

if( defined($show) and !$show )
{
	$handle->terminate();
	exit( 0 );
}

my $newurl;
my $fn = $handle->get_repository->get_conf( "catch404" );
if( defined $fn )
{
	$newurl = &{$fn}( $handle, $url );
}

my $urlpath = $handle->get_repository->get_conf( "rel_path" );
if( defined $newurl )
{
	$handle->redirect( $newurl );
}
elsif( $url =~ m#^$urlpath/view/# )
{
	&noview_404( $handle );
}
else
{
	&plain_404( $handle );
}

$handle->terminate();

