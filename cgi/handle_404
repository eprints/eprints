######################################################################
#
# plain_404( $handle )
#
#  Render a standard Document Not Found error message.
#
######################################################################

sub plain_404
{
	my( $handle ) = @_;

	$handle->build_page( 
		$handle->html_phrase( "cgi/handle_http_error:404_title" ),
		$handle->html_phrase( "cgi/handle_http_error:404_blurb", 
			url => $handle->make_text( $ENV{REDIRECT_URL} ) ),
		"plain_404" );

        $handle->send_page();
}


sub noview_404
{
	my( $handle ) = @_;

	my $error = "The browse views section is missing. The site admin needs to run generate_views. This should be automated with cron. See the documentation for more details.";

	$handle->build_page( 
		$handle->html_phrase( "cgi/handle_http_error:404_title" ),
		$handle->make_text( $error ),
		"noview_404" );
	$handle->get_repository->log( $error );

        $handle->send_page();
}


