######################################################################
#
# plain_404( $session )
#
#  Render a standard Document Not Found error message.
#
######################################################################

sub plain_404
{
	my( $session ) = @_;

	EPrints::ScreenProcessor->process(
		session => $session,
		screenid => "Error::404",
	);
}

