use EPrints::Session;
use EPrints::HTMLRender;
use EPrints::ImportXML;
use EPrints::EPrint;
use strict;
if( scalar @ARGV != 2 )
{
	print STDERR "import_xml <siteid> <xmlfilename>\n";
	exit 1;
}

my $session = new EPrints::Session( 1 , $ARGV[0] );


EPrints::ImportXML::import_file( $session , $ARGV[1] , \&deal );

$session->terminate();

exit;

sub deal 
{
	my( $session , $table , $eprint ) = @_;
	print $session->{render}->render_eprint_citation( $eprint, 0, 0)."\n";
	print "------------\n";
	
	if( $session->{database}->exists( $table , $eprint->{eprintid} ) )
	{
		print  "EXISTS!\n";
		$eprint->commit();
		return;
	}
	print  "NOT EXISTS!\n";
	EPrints::EPrint::create( $session, "archive", undef, $eprint );
}

