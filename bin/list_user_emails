#!/usr/bin/perl -w -I/opt/eprints/perl_lib
BEGIN{ $ENV{EPRINTS_PATH} = "/opt/eprints"; }

######################################################################
#
#  List the emails of all archive users
#
#  Usage: list_user_emails
#
######################################################################
#
#  __COPYRIGHT__
#
# Copyright 2000-2008 University of Southampton. All Rights Reserved.
# 
# __LICENSE__
#
######################################################################

use EPrints::Session;
use EPrints::User;

use strict;
 
my $session = new EPrints::Session( 1 );
exit( 1 ) unless( defined $session );

my @users = EPrints::User::retrieve_users( $session );

foreach $user (@users)
{
	print $user->{email} . "\n";
}

$session->terminate();
